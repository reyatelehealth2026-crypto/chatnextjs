# Database
# For local development, both URLs can be the same
DATABASE_URL=postgresql://user:password@localhost:5432/inbox_system
# Direct URL for migrations (bypasses connection pooler)
# In production, this should point directly to the database, not through a pooler
DATABASE_DIRECT_URL=postgresql://user:password@localhost:5432/inbox_system

# NextAuth
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=your-secret-key-here

# LINE API
LINE_CHANNEL_ID=your-channel-id
LINE_CHANNEL_SECRET=your-channel-secret
LINE_ACCESS_TOKEN=your-access-token

# S3 Storage
S3_ENDPOINT=your-s3-endpoint
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=your-region

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Feature Flags (Optional)
ENABLE_BROADCASTS=true
ENABLE_GROUPS=true
